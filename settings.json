{
  // Editor settings
  "editor.codeLens": false,
  "editor.fontSize": 16,
  "editor.fontFamily": "'Monaspace Argon Var', monospace",
  "editor.fontLigatures": "'calt', 'liga', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'ss09'",
  "editor.formatOnSave": true,
  "editor.wordWrap": "on",
  "editor.renderWhitespace": "trailing",
  "editor.acceptSuggestionOnEnter": "on",
  "editor.tabCompletion": "off",
  "editor.minimap.enabled": false,

  // Terminal settings
  "terminal.integrated.fontFamily": "'Monaspace Argon Var', monospace",
  "terminal.integrated.fontWeight": 450,
  "terminal.integrated.suggest.quickSuggestions": false,

  // Workbench settings
  "workbench.colorTheme": "Atom One Dark",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "hidden",

  // Git settings
  "git.enableSmartCommit": true,

  // GitHub Copilot settings
  "github.copilot.editor.enableAutoCompletions": false,
  "github.copilot.editor.enableCodeActions": false,
  "github.copilot.renameSuggestions.triggerAutomatically": false,

  // Language-specific settings
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[azure-pipelines]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },

  // Python-specific settings
  "isort.args": [
    "--profile",
    "black"
  ],
  "flake8.args": [
    "--max-line-length=88"
  ],

  // Vim settings
  "vim.leader": "<Space>",
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    // Switch between buffers
    { "before": ["<S-h>"], "commands": [":bprevious"] },
    { "before": ["<S-l>"], "commands": [":bnext"] },
    // Splits
    {"before": ["leader", "v"], "commands": [":vsplit"]},
    {"before": ["leader", "s"], "commands": [":split"]},
    // Panes
    {
      "before": ["leader", "h"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["leader", "j"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["leader", "k"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["leader", "l"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    // Extras
    {"before": ["leader", "w"], "commands": [":w!"]},
    {"before": ["leader", "q"], "commands": [":q!"]},
    {"before": ["leader", "x"], "commands": [":x!"]},
    {
      "before": ["leader", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["leader", "r"],
      "commands": ["workbench.action.reloadWindow"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    },
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    },
    {
      "before": ["k", "j"],
      "after": ["<Esc>"]
    },
    {
      "before": ["k", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindings": [
    // Stay in visual mode while indenting
    {"before": ["<"], "commands": ["editor.action.outdentLines"]},
    {"before": [">"], "commands": ["editor.action.indentLines"]}
  ],
  "vim.useCtrlKeys": false,

  // Files settings
  "files.exclude": {
    "**/__pycache__": true,
    "**/flask_session": true
  },
  "files.trimTrailingWhitespace": true
}